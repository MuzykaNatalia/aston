<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/shareit_db</property>
        <property name="hibernate.connection.username">shareit</property>
        <property name="hibernate.connection.password">admin</property>

        <property name="show_sql">true</property>
        <property name="format_sql">true</property>
        <property name="use_sql_comments">true</property>
        <property name="hibernate.hbm2ddl.auto">update</property>
        <mapping class="ru.aston.user.parent.entity.User"/>
        <mapping class="ru.aston.user.author.entity.Author"/>
        <mapping class="ru.aston.user.admin.entity.Admin"/>
        <mapping class="ru.aston.post.entity.Post"/>
        <mapping class="ru.aston.comment.entity.Comment"/>
    </session-factory>
</hibernate-configuration>